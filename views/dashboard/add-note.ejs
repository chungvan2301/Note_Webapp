<script>
  function previewImage() {
    var preview = document.querySelector('img');
    var file = document.querySelector('input[type=file]').files[0];
    var reader = new FileReader();

    reader.addEventListener("load", function () {
      preview.src = reader.result;
    }, false);

    if (file) {
      reader.readAsDataURL(file);
    }
  }
</script>

<div class="container pb-3 mt-3">
    <form action="/dashboard/dashboard/add-note" method="POST" class="position-relative">
        <div class="class-group mb-3 position-absolute" style="left:1px; top:1px; right:1px;">
            <input autofocus required type="text" class="form-control fw-bold border-0 fs-4" id="title" name="title" value="" placeholder="Title" maxlength="100">
        </div>
      <div class="form-group mb-4">
        <textarea autofocus required class="form-control pt-5 fs-4" name="body" id="body" placeholder="Wirte note..." rows="12"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary btn-lg">Create note</button>
      </div>
    </form>
</div>