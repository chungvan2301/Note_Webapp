<div class="container pb-3 mb-3 mt-3">
    <form action="/dashboard/dashboard/note/<%= note._id %>?_method=PUT" method="POST" class="position-relative">
        <div class="class-group mb-3 position-absolute" style="left:1px; top:1px; right:1px;">
            <input required type="text" class="form-control fw-bold border-0 fs-4" id="title" name="title" value="<%= note.title %>" placeholder="Title"> 
        </div>
      <div class="form-group mb-4">
        <textarea required class="form-control pt-5 fs-4" name="body" id="body" placeholder="Wirte note..." rows="12"><%= note.body %></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary btn-lg">Update note</button>
      </div>
    </form>
</div>


