<div class="container" style="margin-top: 15px; background-color: rgba(181, 158, 158, 0.5);">
  <% if (messages.login) {%> <script>alert('Sign up successfully, please login')</script> <%}%>
<form action="/api/passport/login/password" method="POST">
  <% if (hasMessages) { %>
    <section class="messages text-center">
      Incorrect username or password.
    </section>
    <% } %>
    <!-- Username input -->
    <div class="form-outline mb-4">
      <input type="text" id="form2Example1" class="form-control" name="username" required/>
      <label class="form-label" for="form2Example1" >Username</label>
    </div>

    <!-- Password input -->
    <div class="form-outline mb-4">
      <input type="password" id="form2Example2" class="form-control" name="password" required/>
      <label class="form-label" for="form2Example2">Password</label>
    </div>
   
    <!-- Submit button -->
    <button type="submit" class="btn btn-primary btn-block mb-4" name="">Sign in</button>
  
    <!-- Register buttons -->
    <div class="text-center">
      <p>Not a member? <a href="/register">Register</a></p>
      <p>or sign up with:</p>

      <a href="/api/facebook/login/federated/facebook" class="btn btn-link btn-floating mx-1" type="button">
        <i class="fa fa-facebook"></i></a>
      <a href="/api/google/auth/google" class="btn btn-link btn-floating mx-1" type="button">
          <i class="fa fa-google"></i></a>     
    </div>
  </form>
</div>